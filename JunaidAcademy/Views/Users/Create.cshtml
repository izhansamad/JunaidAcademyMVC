@model JunaidAcademy.Models.User

@{
    ViewBag.Title = "Create";
}
<div class="spacer">
</div>
<div class="container">
    <h2>Create</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div style="color: red;">
            @ViewBag.ErrorMessage
        </div>
    }
