@model IEnumerable<JunaidAcademy.Models.Teacher>
@{
    ViewBag.Title = "Faculty";
}


<div class="headerimg_container">
    <!-- <img src="./images/home_slider_1.jpg" alt=""> -->
    <div class="home_slider_content">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="home_slider_title" style="font-size: 50px;">
                        Junaid <span style="color:#efaf06;">Academy</span>
                    </div>
                    <div class="home_slider_subtitle"
                         style="font-weight: 900; color: #384158; font-size: 25px;">OUR EXPERT FACULTY</div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="courses">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="section_title_containers text-center">
                    <h2 class="section_title">Our Faculty</h2>
                    <div class="section_subtitle"><p style="font-size: 17px;">Our courses are taught by experienced instructors who have years of experience in their respective fields. They will provide you with the guidance and support you need to succeed. Our courses are designed to be both challenging and rewarding, so you will be able to get the most out of your learning experience.</p></div>
                </div>
            </div>
        </div>

        <div class="row team_row">



            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 team_col">
                    <div class="team_item">
                        @if (item.Image != null)
                        {
                            <div class="team_image"><img src="@Url.Content(item.Image)" alt=""></div>

                        }
                        else
                        {
                            <div class="team_image"><img src="~/Content/images/faculty.png" alt=""></div>
                        }
                        <div class="team_body">
                            <div class="team_title"><a href="#">@Html.DisplayFor(modelItem => item.TName)</a></div>
                            <div class="team_subtitle">@Html.DisplayFor(modelItem => item.TSubject)</div>
                            <div class="social_list">
                                <ul>
                                    <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</div>

